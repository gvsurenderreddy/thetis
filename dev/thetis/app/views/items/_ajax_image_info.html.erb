
<%= form_tag( {:controller => 'items', :action => 'update_image_info' }, :id => 'form_image_info', :name => 'form_image_info', :method => 'post', :enctype => 'multipart/form-data') %>
<table width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td style="text-align:right;">
      <table width="100%" cellpadding="0" cellspacing="1">
        <tr height="5"><td></td></tr>
        <tr>
          <td colspan="2" align="center">
            <img src="<%= url_for(:controller => 'items', :action => 'get_image', :id => @image.id, :rand => rand(10000000000)) %>" width="90" height="60"/>
          </td>
        </tr>
        <tr height="5"><td></td></tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= h t('item.new_file') %></td>
          <td class="item_value_td">
            <%= file_field :image, :file, :size => '43', :style => 'width:100%' %><br/>
          </td>
        </tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= h Item.human_attribute_name('title') %></td>
          <td class="item_value_td">
            <%= text_field :image, :title, :style => 'width:70%'  %><br/>
          </td>
        </tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= h Image.human_attribute_name('memo') %></td>
          <td class="item_value_td">
            <%= text_area :image, :memo, :rows => "3", :wrap => "off", :style => 'width:100%' %><br/>
          </td>
        </tr>
        <tr height="10"><td></td></tr>
        <tr>
          <td colspan="2">
            <table width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td align="center">
                  <input id="image_info_ok" type="button" value="<%=h t('btn.register') %>" onclick="onImageInfoOK();" style="width:80px;">
                  &nbsp;&nbsp;<input id="image_info_cancel" type="button" value="<%=h t('btn.cancel') %>" onclick="onImageInfoCancel()" style="width:80px;">
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<input type="hidden" name="image_id" value="<%= @image.id %>" />

</form>

