
<% if @mail_filters.nil? or @mail_filters.empty? %>

  <table style="width:100%; height:100%; background-color:cornsilk;" cellpadding="0" cellspacing="0">
    <tr>
      <td style="text-align:center; vertical-align:top;">
        <br/><br/><br/>
        <table style="margin:0px auto; width:80%;"  cellpadding="0" cellspacing="0">
          <tr>
            <td style="text-align:center; padding:10px; color:firebrick; background-color:white; border:5px moccasin dashed;">
              <%= t('paren.no_entries') %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

<% else %>

  <table style="width:100%; height:100%;" cellpadding="0" cellspacing="0">
    <tr>
      <td id="sortable_items" style="text-align:center; vertical-align:top;">
      <%
      @mail_filters.each_with_index do |filter, idx|
        td_class = (idx % 2 == 1) ? 'list_td_off' : 'list_td_on'
      %>
        <div class="<%= td_class %>" id="filter_<%= filter.id %>" style="padding:0px;">
          <table style="width:100%;" cellpadding="0" cellspacing="0">
            <tr>
              <td style="cursor:move; border:2px solid white;" onMouseOver="this.style.borderColor='lime'" onMouseOut="this.style.borderColor='white'">
                <img src="<%= THETIS_RELATIVE_URL_ROOT %>/images/up_down.gif" title="<%= t('msg.drag_to_change_orger') %>" style="cursor:move" />
                &nbsp;<span style="color:navy;"><%= truncate(filter.title, :length => 20) %></span>
              </td>
            </tr>
          </table>
        </div>
      <% end %>
      </td>
    </tr>
  </table>

<script type="text/javascript">

onFiltersOrderChanged = function(elem)
{
  if (thetisBoxFiltersOrder) {
    thetisBoxFiltersOrder.setOnClose("doUpdateFiltersList()");
  }
}

onFiltersOrderUpdated = function()
{
  var addParams = new Array();
  addParams.push("mail_account_id=<%= params[:mail_account_id] %>");
  addParams.push("authenticity_token=<%= form_authenticity_token %>");

  new Ajax.Request(
      "<%= url_for(:controller => 'mail_filters', :action => 'update_order') %>",
      {
        method:"post",
        parameters:Sortable.serialize("sortable_items", { name: "mail_filters_order" }) + "&" + addParams.join("&"),
        asynchronous:true,
        evalScripts:true
      }
    );
}

//<![CDATA[
Sortable.create(
      "sortable_items",
      {
        onChange: onFiltersOrderChanged,
        onUpdate: onFiltersOrderUpdated,
        tag:"div"
      }
    );
//]]>

</script>

<% end %>

