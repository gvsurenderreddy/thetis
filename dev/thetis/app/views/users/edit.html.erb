<% HistoryHelper.set_back(request) %>

<table style="width:100%; padding-top:15px;" cellspacing="0" cellpadding="0">
  <tr>
    <td style="width:52%; vertical-align:top;">
      <%= form_tag({:controller => 'users', :action => 'update', :id => @user.id}, :name => 'form_user_basic', :method => 'post') %>
        <%= render(:partial => 'user_form') %>
      </form>
      <div class="info_area" style="width:100%; padding-top:0px; padding-bottom:15px; text-align:center;">
        <%= hidden_field('user', 'id') %>
        <table style="margin:0px auto; width:85%;"  cellpadding="0" cellspacing="2">
          <tr>
            <td class="item_cap_td" nowrap>
              <%= t('item.profile_sheet') %>
            </td>
            <td class="item_value_td">
              <%= form_tag({:controller => 'items', :action => 'create_profile_sheet', :id => @user.id}, :name => 'form_ajax_userItem', :method => 'post') %>
                <div id="div_ajax_userItem" style="padding-left:10px;">
                  <%= render(:partial => 'ajax_profile_sheet') %>
                </div>
              </form>
            </td>
          </tr>
        </table>
      </div>
    </td>
    <td style="min-width:10px; width:10px;"></td>
    <td style="width:47%; vertical-align:top;">

    <% if @login_user.admin?(User::AUTH_USER) %>
      <!-- Authority -->
      <%= render(:partial => 'user_auth') %>

      <div style="height:10px"></div>

      <!-- Groups -->
      <div class="info_area" style="width:100%; padding:15px 0px; text-align:center;">
        <table style="margin:0px auto; width:95%;"  cellpadding="0" cellspacing="2">
          <tr>
            <td class="item_cap_td" nowrap>
              <%= t('group.plural') %>
            </td>
            <td class="item_value_td">
              <div id="div_user_groups">
                <%= render(:partial => 'ajax_groups') %>
              </div>

            <% if @login_user.admin?(User::AUTH_USER) %>
              <div class="button_gray" style="float:left; margin-top:2px;" onclick="showGroupTreeToSelect('0', false);">
                <%= t('btn.add_group') %>
              </div>
            <% end %>
            </td>
          </tr>
        </table>
      </div>

      <div style="height:10px"></div>

      <!-- OfficialTitles -->
      <div class="info_area" style="width:100%; padding:15px 0px; text-align:center;">
        <table class="info_area" cellspacing="0" cellpadding="0" style="width:95%; margin:0px auto;">
          <tr>
            <td class="item_cap_td" nowrap>
              <%= OfficialTitle.model_name.human %>
            </td>
            <td class="item_value_td" style="padding-top:0px; padding-bottom:0px;">
              <div id="div_ajax_user_titles">
                <%= render(:partial => 'ajax_user_titles') %>
              </div>
            </td>
          </tr>
        </table>
      </div>

      <div style="height:10px"></div>

      <!-- Teams -->
      <div class="info_area" style="width:100%; padding:15px 0px; text-align:center;">
        <table style="margin:0px auto; width:95%;"  cellpadding="0" cellspacing="2">
          <tr>
            <td class="item_cap_td" nowrap>
              <%= t('team.plural') %>
            </td>
            <td class="item_value_td">
              <div id="div_user_teams">
                <ul style="padding-left:15px;">
                <%
                @user.get_teams_a.each do |team_id|
                  begin
                    team = Team.find(team_id)
                    access_auth = team.item.check_user_auth(@login_user, 'r', true)
                %>
                <li type="square">
                <% if access_auth %><a class="a_underline" href="#" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'items', :action => 'show', :id => team.item.id) %>'; return false;"><% end %>
                  <%= team.name %>
                <% if access_auth %></a><% end %><br/>
                <%
                  rescue
                  end
                end
                %>
                </ul>
              </div>
            </td>
          </tr>
        </table>
      </div>

      <div style="height:10px"></div>

      <!-- Zeptair VPN -->
      <div class="info_area" style="width:100%; padding:15px 0px; text-align:center;">
        <table style="margin:0px auto; width:95%;" cellpadding="0" cellspacing="2">
          <tr>
            <td class="item_cap_td" nowrap>
              <%= t('zeptair.vpn_connection') %>
            </td>
            <td class="item_value_td">
              <form name="form_zept_allowed">
                <%
                checked_zept_allowed_true = ''
                checked_zept_allowed_false = ''
                if @user.allowed_zept_connect?
                  checked_zept_allowed_true = 'checked'
                else
                  checked_zept_allowed_false = 'checked'
                end
                %>
                <input type="radio" id="zept_allowed_true" name="zept_allowed" value="true" <%= checked_zept_allowed_true %>><label for="zept_allowed_true"><%= t('msg.allowed') %></label><br/>
                <input type="radio" id="zept_allowed_false" name="zept_allowed" value="false" <%= checked_zept_allowed_false %>><label for="zept_allowed_false"><%= t('msg.not_allowed') %></label>
              </form>
            </td>

            <table cellspacing="0" cellpadding="0" style="width:100%; margin-top:5px;">
              <tr>
                <td style="text-align:center;">
                  <input type="button" value="<%= t('btn.apply') %>" style="width:80px;" onclick="doUpdateZeptAllowed(); return false;" />
                </td>
              </tr>
            </table>
          </tr>
        </table>
      </div>

    <% else %>

      <%= render(:partial => 'show_addition') %>

    <% end %>

    </td>
  </tr>
</table>


<table style="margin:20px auto 10px;" cellspacing="0" cellpadding="0">
  <tr>
    <td class="img_button_td" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'history', :action => 'back') %>';">
      <%= t('btn.back') %>
    </td>
    <td style="width:15px;"></td>
    <td class="img_button_td" onclick="doRegisterUser(document.form_user_basic);">
      <%= t('btn.register') %>
    </td>
  </tr>
</table>

<br/>

<script type="text/javascript">

var thetisBoxUserTitles = null;

onUserTitlesAddClicked = function()
{
  if (thetisBoxUserTitles != null) {
    return;
  }

  var thetisBoxProgress = prog("TOP-RIGHT");

  var addParams = new Array();
  addParams.push("user_id=<%= @user.id %>");

  new Ajax.Request(
          "<%= url_for(:controller => 'users', :action => 'select_official_titles') %>",
          {
            method:"get",
            parameters:addParams.join("&"),
            asynchronous:true,
            evalScripts:true,
            onComplete:function(request){
              thetisBoxProgress.remove();

              thetisBoxUserTitles = new ThetisBox;
              thetisBoxUserTitles.setOnClose(function(){ thetisBoxUserTitles = null; });
              thetisBoxUserTitles.title = "<%= OfficialTitle.model_name.human %>";
              thetisBoxUserTitles.show("CENTER", "460,280", "TRAY", "", "", request.responseText.stripScripts());
              request.responseText.evalScripts();
            }
          }
        );
  return true;
}

onUserTitlesOK = function()
{
  if (getListSelected(_z("official_title_candidates")).length <= 0) {
    return;
  }

  var btnOk = _z("user_titles_ok");
  btnOk.disabled = true;
  var btnCancel = _z("user_titles_cancel");
  btnCancel.disabled = true;

  var thetisBoxProgress = prog("CENTER");

  var frm = _z("form_user_titles");

  new Ajax.Updater(
          "div_ajax_user_titles",
          frm.action,
          {
            method:"post",
            asynchronous:true,
            evalScripts:false,
            parameters:Form.serialize(frm),
            onComplete:function(request) {
              thetisBoxProgress.remove();
              thetisBoxUserTitles.remove();
              if (setUserModified) {
                setUserModified();
              }

              request.responseText.evalScripts();
            }
          }
        );
}

onUserTitlesCancel = function()
{
  thetisBoxUserTitles.remove();
}

onUserTitlesRemoveClicked = function()
{
  var selAry = getListSelected(_z("official_titles"));
  if (selAry.length <= 0) {
    return;
  }

  confm(selAry.length+"<%= t('official_title.confirm_remove_from_user') %>", "_onUserTitlesRemoveClicked()");
}

_onUserTitlesRemoveClicked = function()
{
  var thetisBoxProgress = prog("CENTER");

  var add_params = new Array();
  add_params.push("user_id=<%= @user.id %>");

  var selAry = getListSelected(_z("official_titles"));
  for (var i=0; i < selAry.length; i++) {
    add_params.push("official_titles[]="+selAry[i]);
  }
  add_params.push("authenticity_token=<%= form_authenticity_token %>");

  new Ajax.Updater(
          "div_ajax_user_titles",
          "<%= url_for(:controller => 'users', :action => 'remove_official_titles') %>",
          {
            method:"post",
            asynchronous:true,
            evalScripts:false,
            parameters:add_params.join("&"),
            onComplete:function(request) {
              thetisBoxProgress.remove();
              thetisBoxUserTitles.remove();
              if (setUserModified) {
                setUserModified();
              }

              request.responseText.evalScripts();
            }
          }
        );
}

doDelete = function(user_id, title)
{
  confm("<%= t('paren.square.left') %>" + title + "<%= t('msg.confirm_to_delete') %>", "_doDelete("+user_id+")");
}

_doDelete = function(user_id)
{
  var thetisBox = prog("TOP-RIGHT");

  new Ajax.Updater(
          "div_ajax_userItem",
          "<%= url_for(:controller => 'users', :action => 'destroy_profile_sheet') %>?id=" + user_id,
          {
            asynchronous:true,
            evalScripts:true,
            onComplete:function(request){ thetisBox.remove(); },
            parameters:Form.serialize(document.form_ajax_userItem)
          }
      );
}

showGroupTreeToSelect = function(group_id, do_change)
{
  var additionalParams = new Array(
                            "authenticity_token=<%= form_authenticity_token %>",
                            "user_id=<%= @user.id %>"
                          );
  if (do_change == true) {
    additionalParams.push("current_id="+group_id);
  }

  var caption = "";
  if (do_change == true) {
    caption = "<%= t('group.select_to_change_to')%>";
  } else {
    caption = "<%= t('user.select_group_to_add_to')%>";
  }

  var thetisBox = new ThetisBox;
  thetisBox.progress = true;
  thetisBox.setFormTag("<form action=\"<%= url_for(:controller => 'users', :action => 'add_to_group') %>\" method=\"post\" onsubmit=\"new Ajax.Updater('div_user_groups', this.action, {asynchronous:true, evalScripts:true, onComplete:function(request){__thetisBoxProgress.remove();}, parameters:Form.serialize(this)}); return false;\">");
  thetisBox.setAdditionalParams(additionalParams);
  thetisBox.show("CENTER", "", "TREE", "", caption, "");
  thetisBox.setTree("<%= url_for(:controller => 'groups', :action => 'ajax_get_tree') %>", group_id);
}

doRemoveGroup = function(group_id, path, user_id)
{
  confm("<%= t('user.confirm_to_excluded_from1') %>" + path + "<%= t('user.confirm_to_excluded_from2') %>", "_doRemoveGroup("+group_id+", "+user_id+")");
}

_doRemoveGroup = function(group_id, user_id)
{
  var thetisBox = prog("TOP-RIGHT");

  new Ajax.Updater(
        "div_user_groups",
        "<%= url_for(:controller => 'users', :action => 'exclude_from_group') %>?id=" + user_id + "&group_id=" + group_id,
        {
          parameters:"authenticity_token=<%= form_authenticity_token %>",
          asynchronous:true,
          evalScripts:true,
          onComplete:function(request){ thetisBox.remove() }
        }
     );
}

doUpdateZeptAllowed = function()
{
  var zept_allowed = null;
  var radios = document.form_zept_allowed.zept_allowed;
  if (radios == null)
    return;

  for (var i=0; i < radios.length; i++) {
    if (radios[i].checked) {
      zept_allowed = radios[i].value;
      break;
    }
  }
  if (!zept_allowed)
    return;

  var thetisBox = prog("TOP-RIGHT");
  new Ajax.Request(
              "<%= url_for(:controller => 'users', :action => 'update_zept_allowed', :id => @user.id) %>",
              {
                method:"get",
                asynchronous:true,
                evalScripts:true,
                onComplete:function(request){
                  thetisBox.remove();
                  if (request.responseText == "") {
                    tips("<%= t('msg.update_success') %>");
                  } else {
                    msg("<%= t('msg.system_error')%><br/>"+request.responseText);
                  }
                },
                parameters:"zept_allowed="+zept_allowed
              }
            );
}

</script>
