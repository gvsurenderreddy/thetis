
<table class="info_area" cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <td id="sortable_titles" align="left" style="padding-left:10px;">
      <%
      titles = User.get_config_titles
      unless titles.nil?
        titles.each do |title_name|
      %>
        <div id="item_<%= title_name %>" style="height:18px; padding-top:4px; padding-bottom:4px;">
          <img src="<%= THETIS_RELATIVE_URL_ROOT %>/images/up_down.gif" alt="<%= t('msg.drag_to_change_orger') %>" style="cursor:move" />
          <%= truncate(title_name, :length => 20) %>
          &nbsp;&nbsp;<img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/edit.gif" alt="<%= t('btn.rename') %>" title="<%= t('btn.rename') %>" onclick="doRenameTitle('<%= ApplicationHelper.h_s_quote(title_name) %>'); return false;" />
          &nbsp;<img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/delete.gif" alt="<%= t('btn.delete') %>" title="<%= t('btn.delete') %>" onclick="doDeleteTitle('<%= ApplicationHelper.h_s_quote(title_name) %>'); return false;" />
        </div>
      <%
        end
      end
      %>
    </td>
  </tr>
</table>

<script type="text/javascript">

onTitlesOrderUpdated = function()
{
  var addParams = new Array();
  addParams.push("authenticity_token=<%= form_authenticity_token %>");

  new Ajax.Request(
      "<%= url_for(:controller => 'users', :action => 'update_titles_order') %>",
      {
        method:"post",
        parameters:Sortable.serialize("sortable_titles", { name: "titles_order" }) + "&" + addParams.join("&"),
        asynchronous:true,
        evalScripts:true
      }
    );
}

//<![CDATA[
Sortable.create(
      "sortable_titles",
      {
        onUpdate: onTitlesOrderUpdated,
        tag:"div"
      }
    );
//]]>
</script>

