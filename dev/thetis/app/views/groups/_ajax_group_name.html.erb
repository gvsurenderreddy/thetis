<%
unless @group.nil?
  div_id = 'groupTree:' + @group.id.to_s

  group_folder_open = THETIS_RELATIVE_URL_ROOT + '/images/folder/group_folder_open.gif'
  group_folder_close = THETIS_RELATIVE_URL_ROOT + '/images/folder/group_folder_close.gif'
%>
  <img id="<%= div_id %>_open" src="<%= group_folder_open %>" border="0"><img id="<%= div_id %>_close" src="<%= group_folder_close %>" border="0" style="display:none;">
  /<span id="<%= div_id %>_name"><%=h @group.name %></span>
<% end %>
