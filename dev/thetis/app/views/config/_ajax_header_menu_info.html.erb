<%
if @header_menu_param.nil?
  @header_menu_param = ['', '', '']
end
%>

<%= form_tag( {:controller => 'config', :action => 'update_header_menu'}, :name => 'form_header_menu_info', :method => 'post') %>
<table width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td style="text-align:right;">
      <table width="100%" cellpadding="0" cellspacing="1">
        <tr height="20"><td></td></tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= h t('config.menu_name') %></td>
          <td class="item_value_td">
            <input type="text" name="header_menu[name]" value="<%=h @header_menu_param[0] %>" style="width:95%" /><br/>
          </td>
        </tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= h t('config.menu_target') %></td>
          <td class="item_value_td">
            <%
            [['main', t('config.menu_inside_thetis')], ['_blank', t('config.menu_new_window')]].each do |choice|
              checked = ''
              checked = 'checked' if choice.first == @header_menu_param[1]
            %>
              <input type="radio" id="target_<%=h choice.first %>" name="header_menu[target]" value="<%=h choice.first %>" <%= checked %> /><label for="target_<%=h choice.first %>"><%=h choice.last %></label>
            <% end %>
            <br/>
          </td>
        </tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= h t('config.menu_url') %></td>
          <td class="item_value_td">
            <input type="text" name="header_menu[url]" value="<%=h @header_menu_param[2] %>" style="width:95%" /><br/>
          </td>
        </tr>
        <tr height="10"><td></td></tr>
        <tr>
          <td colspan="2">
            <table width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td align="center">
                  <input id="header_menu_info_ok" type="button" value="<%=h t('btn.register') %>" onclick="onHeaderMenuInfoOK('<%=ApplicationHelper.h_s_quote @header_menu_param[0] %>');" style="width:80px;">
                  &nbsp;&nbsp;<input id="header_menu_info_cancel" type="button" value="<%=h t('btn.cancel') %>" onclick="onHeaderMenuInfoCancel()" style="width:80px;">
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

</form>

