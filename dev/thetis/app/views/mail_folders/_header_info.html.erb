
<table width="100%" cellspacing="0" cellpadding="0">
  <tr>
    <td colspan="2" align="right" nowrap style="padding:0px 10px;">
      <%= email.get_sent_at_exp %>
    </td>
  </tr>
  <tr>
    <td align="left" valign="top" width="20%" nowrap style="padding:0px 10px;">
      <%= t('cap.sender') %>
    </td>
    <td align="left" nowrap style="padding:0px 10px;">
      <%= email.from_address %>
    </td>
  </tr>
<% unless email.to_addresses.nil? or email.to_addresses.empty? %>
  <tr>
    <td align="left" valign="top" width="20%" nowrap style="padding:0px 10px;">
      <%= t('btn.to') %>
    </td>
    <td align="left" nowrap style="padding:0px 10px;">
    <% email.to_addresses.split(Email::ADDRESS_SEPARATOR).each do |to_addr| %>
      <%= to_addr %><br/>
    <% end %>
    </td>
  </tr>
<% end %>
<% unless email.cc_addresses.nil? or email.cc_addresses.empty? %>
  <tr>
    <td align="left" valign="top" width="20%" nowrap style="padding:0px 10px;">
      <%= t('btn.cc') %>
    </td>
    <td align="left" nowrap style="padding:0px 10px;">
    <% email.cc_addresses.split(Email::ADDRESS_SEPARATOR).each do |cc_addr| %>
      <%= cc_addr %><br/>
    <% end %>
    </td>
  </tr>
<% end %>
<% unless email.bcc_addresses.nil? or email.bcc_addresses.empty? %>
  <tr>
    <td align="left" valign="top" width="20%" nowrap style="padding:0px 10px;">
      <%= t('btn.bcc') %>
    </td>
    <td align="left" nowrap style="padding:0px 10px;">
    <% email.bcc_addresses.split(Email::ADDRESS_SEPARATOR).each do |bcc_addr| %>
      <%= bcc_addr %><br/>
    <% end %>
    </td>
  </tr>
<% end %>
</table>
