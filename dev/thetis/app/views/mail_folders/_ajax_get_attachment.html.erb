
<table align="left" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td align="left">
    <% @mail_attachs.each do |mail_attach| %>
      <div onClick="location='<%= url_for :controller => 'mail_folders', :action => :get_mail_attachment, :id => mail_attach.id %>'" onMouseOver="this.style.borderColor='lime'" onMouseOut="this.style.borderColor='white'">
        <img src="<%= THETIS_RELATIVE_URL_ROOT %>/images/item.gif"><%= mail_attach.name %><br />
      </div>
    <% end %>
    </td>
  </tr>
</table>


<%= render :partial => 'common/flash_notice' %>
