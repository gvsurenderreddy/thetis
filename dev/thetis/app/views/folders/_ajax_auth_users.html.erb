
<% if @folder.nil? %>

<table width="100%" height="100%" cellpadding="0" cellspacing="0" style="background-color:lightcyan;">
  <tr>
    <td valign="top">
      <br/><br/><br/>
      <table align="center" width="80%" cellpadding="0" cellspacing="0">
        <tr>
          <td align="left" valign="top" style="padding:10px; color:firebrick; background-color:white; border:5px moccasin dashed;">
            <%=h t('folder.cannot_be_edited') %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<% else %>

<table id="view_sub" cellspacing="0" cellpadding="0" width="100%" height="100%" style="background-color:lightcyan;">
  <tr>
    <td style="vertical-align:top;">
      <table cellspacing="2" cellpadding="0" width="100%">
        <tr height="20">
          <td id="tab_users" class="td_item_tab" nowrap bgcolor="blue" style="cursor:default">
              <%= h t('user.plural') %>
          </td>
          <td id="tab_groups" class="td_item_tab" nowrap onclick="selectTabGroups(<%= @folder.id %>);" bgColor="silver" onMouseOver="this.bgColor='palegreen'" onMouseOut="this.bgColor='silver';">
              <%= h t('group.plural') %>
          </td>
          <td id="tab_teams" class="td_item_tab" nowrap onclick="selectTabTeams(<%= @folder.id %>);" bgColor="silver" onMouseOver="this.bgColor='palegreen'" onMouseOut="this.bgColor='silver';">
              <%= h t('team.plural') %>
          </td>
        </tr>
      </table>
    </td>
  </tr>

  <tr>
    <td style="vertical-align:top;">

      <%= form_tag( {:controller => 'folders', :action => 'set_auth_users', :id => ''}, :name => 'form_folder_auth', :method => 'post') %>
        <table cellspacing="0" cellpadding="0" width="100%">
          <tr height="10"><td></td></tr>
          <tr>
            <td style="padding:10px;">
              <table cellspacing="0" cellpadding="0" width="100%">
                <tr>
                  <td id="div_selectUsers" style="text-align:left;">

                    <%= render :partial => 'ajax_select_users' %>

                  </td>
                </tr>
                <tr height="5"><td></td></tr>
                <tr>
                  <td>
                    <table cellspacing="0" cellpadding="0" width="100%">
                      <tr>
                        <td align="center" nowrap>
                          <input type="button" value="<%= raw(t('arrow.down')) %><%=h t('auth.read_write') %>" onclick="var ary=moveListWithSuffix($('user_candidates'), $('users_auth'), ':r+w', ' (Read/Write)'); if (ary != null && ary.length > 0) {modified_users++;} return false;">
                          <input type="button" value="<%= raw(t('arrow.down')) %><%=h t('auth.read') %>" onclick="var ary=moveListWithSuffix($('user_candidates'), $('users_auth'), ':r', ' (Read)'); if (ary != null && ary.length > 0) {modified_users++;} return false;">
                          <input type="button" value="<%= raw(t('arrow.down')) %><%=h t('auth.write') %>" onclick="var ary=moveListWithSuffix($('user_candidates'), $('users_auth'), ':w', ' (Write)'); if (ary != null && ary.length > 0) {modified_users++;} return false;">
                          <input type="button" value="<%= raw(t('arrow.up')) %><%=h t('btn.remove') %>" onclick="var ary=moveListTrimSuffix($('users_auth'), $('user_candidates'), ':', '('); if (ary != null && ary.length > 0) {modified_users++;} return false;">
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr height="6"><td></td></tr>
                <tr>
                  <td>
                    <select class="select_multi" id="users_auth" name="users_auth[]" size="5" multiple="multiple">
                    <%
                     readWrite = @read_users & @write_users
                     readOnly = @read_users - @write_users
                     writeOnly = @write_users - @read_users
                     readWrite.each do |user_id|
                    %>
                      <option value="<%= user_id %>:r+w"><%=h User.get_name(user_id) %> (Read/Write)</option>
                    <% end %>
                    <% readOnly.each do |user_id| %>
                      <option value="<%= user_id %>:r"><%=h User.get_name(user_id) %> (Read)</option>
                    <% end %>
                    <% writeOnly.each do |user_id| %>
                      <option value="<%= user_id %>:w"><%=h User.get_name(user_id) %> (Write)</option>
                    <% end %>
                    </select>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr height="20">
            <td>
              <table align="center" cellspacing="0" cellpadding="0">
                <tr height="20"><td></td></tr>
                <tr>
                <td class="img_button_td" onclick="doApplyAuthUsers(<%= @folder.id %>);">
                  <%=h t('btn.apply') %>
                </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr height="15"><td></td></tr>
        </table>
      </form>

    </td>
  </tr>
</table>

<% end %>

<%= render :partial => 'common/flash_notice' %>

<script type="text/javascript">

modified_users = 0;
modified_groups = 0;
modified_teams = 0;

showGroupTreeToSelect = function(group_id)
{
  var thetisBox = new ThetisBox;
  thetisBox.progress = true;
  thetisBox.setFormTag("<form action=\"<%= url_for :controller => 'items', :action => 'get_group_users' %>\" method=\"post\" onsubmit=\"new Ajax.Updater('div_selectUsers', '<%= url_for :controller => 'folders', :action => 'get_group_users', :id => @folder.id %>', {asynchronous:true, evalScripts:true, onComplete:function(request){__thetisBoxProgress.remove();}, parameters:Form.serialize(this)+'&authenticity_token=<%= form_authenticity_token %>'}); return false;\">");
  thetisBox.show("CENTER", "", "TREE", "", "<%=h t('group.select_to_show')%>", "");
  thetisBox.setTree("<%= url_for :controller => 'groups', :action => 'ajax_get_tree' %>", group_id);
}
</script>
