
<table class="border_collapse steelblue" cellspacing="0" cellpadding="0" style="width:100%;">
  <tr>
<% @schedules_hash.each do |day, schedules| %>
    <td style="width:14.28%; text-align:center; word-break:break-all; font-weight:400; font-size:11pt; background-color:<%= THETIS_WDAY_COLOR[day.wday] %>;">
      <%= day.day %> (<%= Schedule::wday_name(day.wday) %>)
    </td>
<% end %>
  </tr>
  <tr>
<%
@schedules_hash.each do |_day, schedules|
  @day = _day
%>
    <td style="vertical-align:top;">

      <table cellspacing="1" cellpadding="0" style="width:100%;">
  <%
  if schedules.length > 0
    overlap_ary = Schedule.check_overlap_equipment(@equipment_id, schedules, @day)
    schedules.each do |_schedule|
      @schedule = _schedule
  %>
        <tr>
          <%= render(:partial => 'schedule_entry_week') %>
        </tr>
  <%
    end
  else
  %>
        <tr>
          <td style="border:none;">&nbsp;</td>
        </tr>
  <% end %>
      </table>

    </td>
<% end %>
  </tr>
</table>

