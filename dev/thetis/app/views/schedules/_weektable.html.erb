
<table cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <td align="center" valign="top">

      <table width="100%" cellspacing="0" cellpadding="0" style="border:steelblue 1px solid; border-collapse:collapse;">
        <tr>
      <% @schedules_hash.each do |day, schedules| %>
          <td align="center" style="border:steelblue 1px solid; font-weight:400; font-size:11pt; background-color:<%= THETIS_WDAY_COLOR[day.wday] %>;"><%= day.day %> (<%=h Schedule::wday_name(day.wday) %>)</td>
      <% end %>
        </tr>
        <tr>
      <%
      @schedules_hash.each do |_day, schedules|
        @day = _day
      %>
          <td valign="top" style="border:steelblue 1px solid;">

            <table width="100%" cellspacing="1" cellpadding="0" style="border-collapse:collapse;">
        <%
        if schedules.length > 0
          overlap_ary = Schedule.check_overlap_equipment(@equipment_id, schedules, @day)
          schedules.each do |_schedule|
            @schedule = _schedule
        %>
              <tr>
                <%= render(:partial => 'schedule_entry_week') %>
              </tr>
        <%
          end
        else
        %>
              <tr>
                <td>&nbsp;</td>
              </tr>
        <% end %>
            </table>

          </td>
      <% end %>
        </tr>
      </table>

    </td>
  </tr>
</table>
