<table align="center" width="85%" cellpadding="0" cellspacing="2">
  <tr>
    <td class="item_cap_td" nowrap style="width:100%;"><%=h t('research.choice_type') %></td>
  </tr>
  <tr>
    <td class="item_value_td" style="padding:0px; text-align:right;">
      <input type="button" value="<%=h t('btn.reset') %>" onclick="doResetCtrl();" style="width:100px;" />
    </td>
  </tr>
  <tr>
    <td class="item_value_td">
      <select id="sel_q_codes" class="select_multi" size="5" style="width:100%;" onchange="onSelectQCodes(this.value)">
      <%
      @q_hash.each do |q_code, q_params_h|
        q_id = "#{q_params_h[:item_id]}:#{q_code}"
      %>
        <option value="<%= q_id %>"><%=h truncate(q_params_h[:item_title], :length => 20) %> : $<%= q_code %></option>
      <% end %>
      </select>
      <%
      @q_hash.each do |q_code, q_params_h|
        q_id = "#{q_params_h[:item_id]}:#{q_code}"
        unless q_params_h[:type].nil?
          q_param = q_params_h[:type] + ':' + q_params_h[:values]
        end
        cap = q_params_h[:caption]
      %>
        <textarea id="<%= q_id %>" style="display:none;"><%=h (q_param.nil?)?'':q_param %></textarea>
        <div id="<%= q_id %>_cap" style="display:none;"><%=h (cap.nil?)?'':cap %></div>
      <% end %>
    </td>
  </tr>
  <tr>
    <td class="item_value_td" nowrap>
      <%=h t('research.q') %> <input id="q_cap" type="text" value="" style="width:80%;" />
      <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/info.gif" onclick="msg('<%= t('research.q_info') %>');">
    </td>
  </tr>
  <tr>
    <td class="item_value_td">
      <select id="sel_q_types" style="width:100%;" disabled="true" onchange="onSelectQTypes(this.value)">
        <option value=""><%=h t('msg.select_type')%></option>
        <option value="radio"><%=h t('research.radio_buttons')%></option>
        <option value="checkbox"><%=h t('research.check_boxes')%></option>
        <option value="select"><%=h t('research.dropdown_list')%></option>
        <option value="textarea"><%=h t('research.textarea')%></option>
      </select><br/>
      <table width="100%" cellspacing="0" cellpadding="0">
        <tr>
          <td align="center">

            <!-- radio, checkbox, select -->
            <div id="ctrl_alts" style="display:none;">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td style="padding-left:10px; padding-right:10px; background-color:#FFF2F6; border:1px solid indianred; border-top:0px;" valign="top">
                    <table width="100%" cellpadding="0" cellspacing="0">
                      <tr height="7"><td></td></tr>
                      <tr>
                        <td style="padding-left:5px; color:indianred;">
                          <%=h t('research.specify_choice') %><br/>
                        </td>
                      </tr>
                      <tr height="3"><td></td></tr>
                      <tr>
                        <td style="padding-left:5px;">
                          <textarea id='ctrl_alts_vals' wrap="off" rows="5" style="width:100%;"></textarea>
                        </td>
                      </tr>
                      <tr height="10"><td></td></tr>
                    </table>
                  </td>
                </tr>
                <tr>
                  <td class="item_value_td" style="text-align:right;">
                    <input type="button" value="<%=h t('btn.apply') %>" onclick="doApplyCtrl();" style="width:100px;" />
                  </td>
                </tr>
              </table>
            </div>

            <!-- textarea -->
            <div id="ctrl_textarea" style="display:none;">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td style="padding-left:10px; padding-right:10px; background-color:#FFF2F6; border:1px solid indianred; border-top:0px;" valign="top">
                    <table align="center" width="100%" cellpadding="0" cellspacing="0">
                      <tr height="7"><td></td></tr>
                      <tr>
                        <td width="5%" nowrap style="padding-left:5px; color:indianred;">
                          <%=h t('research.rows') %><br/>
                        </td>
                        <td style="padding-left:5px;">
                          <input id='ctrl_textarea_rows' style="width:50;" />
                        </td>
                      </tr>
                      <tr height="10"><td></td></tr>
                    </table>
                  </td>
                </tr>
                <tr>
                  <td class="item_value_td" style="text-align:right;">
                    <input type="button" value="<%=h t('btn.apply') %>" onclick="doApplyCtrl();" style="width:100px;">
                  </td>
                </tr>
              </table>
            </div>

          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
