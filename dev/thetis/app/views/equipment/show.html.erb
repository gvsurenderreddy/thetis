
<%= render :partial => 'common/error', :locals => {:obj => @equipment} %>

<div style="width:100%; padding-top:40px; padding-bottom:0px;" align="center">

  <!-- Basic Information -->
  <div class="info_area" style="width:90%; padding-top:15px; padding-bottom:15px;" align="center">
    <table align="center" width="85%" cellpadding="0" cellspacing="2">
      <tr>
        <td class="prim_cap_td" nowrap><label for="equipment_name"><%=h Equipment.human_attribute_name('name') %></label></td>
        <td class="item_value_td">
          <%=h @equipment.name %>
        </td>
      </tr>
      <tr>
        <td class="item_cap_td" nowrap><label for="equipment_note"><%=h Equipment.human_attribute_name('note') %></label></td>
        <td class="item_value_td">
          <pre><%=h @equipment.note %></pre>
        </td>
      </tr>
    </table>
  </div>

</div>

<% if params[:popup] != 'true' %>
<table align="center" cellspacing="0" cellpadding="0">
  <tr height="20"><td></td></tr>
  <tr>
    <td class="img_button_td" onclick="prog('TOP-RIGHT'); history.back();">
      <%=h t('btn.back') %>
    </td>
  </tr>
  <tr height="10"><td></td></tr>
</table>
<% end %>
<br/>

