<div style="padding-bottom:15px;">
  <table class="timecard" style="width:100%;">
    <tr>
      <th style="width:25%;"><%= User.human_attribute_name('name') %></th>
      <th style="width:20%;"><%= t('user.title') %></th>
      <th style="width:55%;"><%= Group.model_name.human %></th>
    </tr>
    <tr>
      <td style="text-align:center;">
        <b><%= @selected_user.get_name_for_timecard %></b>
      </td>
      <td style="text-align:center;">
        <%= @selected_user.title %>
      </td>
      <td style="text-align:left; padding:0px 5px">
        <%
        @groups_cache ||= {}
        @group_obj_cache ||= {}

        @selected_user.get_groups_a.each do |group_id|
        %>
          <%= Group.get_path(group_id, @groups_cache, @group_obj_cache) %><br/>
        <% end %>
      </td>
    </tr>
  </table>
</div>
