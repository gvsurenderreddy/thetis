<%= form_tag( {:controller => 'users', :action => 'list'}, :method => 'get', :name => 'form_list') %>

<table cellspacing="0" cellpadding="0" style="width:100%; padding-bottom:5px;">
  <tr>
  <% if @login_user.admin?(User::AUTH_USER) %>
    <td style="text-align:left; width:1%;" nowrap>
      <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/user_add.gif" title="<%= t('btn.create') %>" onclick="doEditUser(null);">
    </td>
    <td style="width:10px;"></td>
    <td style="text-align:left; width:1%;" nowrap>
      <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/csv_exp.gif" title="<%= t('btn.export_csv') %>" onclick="exportCsv();">
    </td>
    <td style="width:10px;"></td>
    <td style="text-align:left; width:1%;" nowrap>
      <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/csv_imp.gif" title="<%= t('btn.import_csv') %>" onclick="importCsv();">
    </td>
    <td style="width:10px;"></td>
    <td style="text-align:left; width:1%;" nowrap>
      <img class="img_btn" src="<%= THETIS_RELATIVE_URL_ROOT %>/images/icons/config.png" title="<%= t('btn.config') %>" onclick="prog('TOP-RIGHT'); location.href='<%= url_for(:controller => 'users', :action => 'configure') %>';">
    </td>
  <% end %>
    <td style="text-align:right;" nowrap>
